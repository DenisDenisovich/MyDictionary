<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="@dimen/dictWordTextSize"
        android:textColor="@color/colorDictionaryItem"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:text="Add new word"/>
    <EditText
        android:id="@+id/newWordDialog"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dictWordTextSize"
        android:textColor="@color/colorDictionaryWord"
        android:hint="word"/>
    <EditText
        android:id="@+id/newTranslateDialog"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dictWordTextSize"
        android:textColor="@color/colorDictionaryWord"
        android:hint="translate"/>
</LinearLayout>